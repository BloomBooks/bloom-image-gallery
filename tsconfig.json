{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client", // Vite-injected env variables , Asset imports
      "@emotion/react/types/css-prop",
      "@types/wicg-file-system-access"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": false, // eslint will warn
    "noUnusedLocals": false, // eslint will warn
    "noUnusedParameters": false, // eslint will warn
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src",
    "common/bloomMediaMetadata.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}